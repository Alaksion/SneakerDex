<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_item_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="30dp"
    android:paddingVertical="15dp"
    android:background="@drawable/list_item_container"
    android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/tv_sneaker_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Dunk High"
        android:textSize="18sp"
        android:fontFamily="@font/archivo_bold"
        android:textColor="@color/detail_grey"/>

    <TextView
        android:id="@+id/tv_brand_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sneaker_name"
        tools:text="Nike"
        android:textSize="22sp"
        android:fontFamily="@font/archivo_bold"
        android:textColor="@color/title_grey"/>

    <ImageView
        android:id="@+id/iv_sneaker_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/tv_brand_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/sneaker_template"/>

    <TextView
        android:id="@+id/tv_price_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_sneaker_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/pre_o"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/archivo_bold"
        android:textColor="@color/detail_grey"/>

    <TextView
        android:id="@+id/tv_retail_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_price_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="$ 250"
        android:textSize="22sp"
        android:fontFamily="@font/archivo_bold"
        android:textColor="@color/app_orange"/>

</androidx.constraintlayout.widget.ConstraintLayout>